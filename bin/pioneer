#!/usr/bin/env node
function requireFromLib (modulePath) {
  return require(lib + path.join("/", modulePath));
}

var path        = require('path');
var fs          = require('fs');
var lib         = path.join(path.dirname(fs.realpathSync(__filename)), path.join('../', 'lib'));
var Pioneer     = requireFromLib('pioneer');

var updateNotifier = require('update-notifier');
var notifier = updateNotifier({packagePath: path.join('../', 'package.json')});

if (notifier.update) {
    notifier.notify();
}

global.ARGV = Array.prototype.slice.call(process.argv);

new Pioneer(lib, {
  testRunner: requireFromLib('runners/simple'),
  configBuilder: requireFromLib('config_builder')
});
